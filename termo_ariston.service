[Unit]
Description=Termo Ariston Daemon Monitor
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/riva/src/domotica
ExecStart=/home/riva/src/domotica/.venv/bin/python3 /home/riva/src/domotica/termo_ariston.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target